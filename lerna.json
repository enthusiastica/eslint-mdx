{
  "$schema": "http://json.schemastore.org/lerna",
  "version": "0.9.6",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "changelog": {
    "cacheDir": ".cache",
    "ignoreCommitters": ["*bot"]
  },
  "command": {
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "createRelease": "github",
      "gitReset": false,
      "message": "chore(release): %s"
    }
  }
}
